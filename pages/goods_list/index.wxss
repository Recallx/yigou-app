.ygtabs_content .ygtabs_nav {
  display: flex;
  border-bottom: 1rpx solid #ccc;
  padding: 10rpx 0;
}
.ygtabs_content .ygtabs_nav .ygtaba_image {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.ygtabs_content .ygtabs_nav .ygtaba_image image {
  width: 60%;
}
.ygtabs_content .ygtabs_nav .ygtaba_text {
  flex: 2;
  color: #000;
  padding: 10rpx 30rpx;
  font-size: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.ygtabs_content .ygtabs_nav .ygtaba_text .ygtaba_wenzi {
  display: -webkit-box;
  overflow: hidden;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.ygtabs_content .ygtabs_nav .ygtaba_text .ygtaba_price {
  color: var(--themeColor);
  margin-top: 20rpx;
}
