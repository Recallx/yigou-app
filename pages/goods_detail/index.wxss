page {
  padding-bottom: 90rpx;
}
.goods_swiper {
  height: 500rpx;
}
.goods_swiper .goods_swiper_item {
  display: flex;
  justify-content: center;
}
.goods_swiper .goods_swiper_item image {
  width: 60%;
}
.detail-price {
  font-size: 35rpx;
  color: var(--themeColor);
  margin-left: 20rpx;
}
.detail_name {
  display: flex;
  padding: 10rpx;
  border-bottom: 1rpx solid #ccc;
}
.detail_name .detail-wenzi {
  flex: 5;
  display: -webkit-box;
  overflow: hidden;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 32rpx;
  color: #000;
  border-right: 1rpx solid #000;
}
.detail_name .detail-shoucang {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.detail_tu .tuwen {
  color: var(--themeColor);
  font-size: 35rpx;
  font-weight: bold;
  padding: 20rpx;
  border-bottom: 1rpx solid #ccc;
}
.detail_bottom {
  position: fixed;
  width: 100%;
  height: 90rpx;
  left: 0;
  bottom: 0;
  border-top: 1px solid #ccc;
  background-color: #fff;
  display: flex;
}
.detail_bottom .toll_item {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: relative;
}
.detail_bottom .toll_item button {
  position: absolute;
  width: 100%;
  height: 100%;
  opacity: 0;
  top: 0;
  left: 0;
}
.detail_bottom .btn_cart,
.detail_bottom .btn_buy {
  flex: 2;
  color: #fff;
  font-weight: 600;
  text-align: center;
  line-height: 90rpx;
}
.detail_bottom .btn_cart {
  background-color: #ffa500;
}
.detail_bottom .btn_buy {
  background-color: var(--themeColor);
}
